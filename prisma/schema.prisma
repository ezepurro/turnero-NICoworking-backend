
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String 
  email        String   @unique
  password     String 
  contact      String
  isAdmin      Boolean  @default(false)
  isCoworker   Boolean  @default(false)
  appointments Appointment[]
}

model Appointment {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  client        User     @relation(fields: [clientId], references: [id])
  clientId      String   @db.ObjectId 
  date          DateTime  
  sessionLength Int? 
  sessionZones  Int?
  contact       String
  type          String
  status        String
  createdAt     DateTime @default(now()) 
  extraName     String?
  extraContact  String?
  extraData     String?
}


model CalendarSettings {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  waxDays       DateTime[]
}

model Date {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  date String
  startTime String
  endTime String
}